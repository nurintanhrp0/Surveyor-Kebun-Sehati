<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMember"
    android:background="@color/abuabumuda">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtLogin"
                android:text="Registrasi Anggota"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:gravity="center_horizontal">
            </TextView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_below="@id/inpNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpAlamat"
                android:hint="Masukkan Alamat Lengkap"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:textSize="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_border"
                android:layout_marginTop="20dp">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/inpKota"
                    android:padding="15dp"
                    >
                </Spinner>

            </LinearLayout>

            <EditText
                android:layout_marginTop="20dp"
                android:layout_below="@id/txtLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpNama"
                android:hint="Masukkan Nama Horeka"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:textSize="14dp"/>



            <EditText
                android:layout_marginTop="20dp"
                android:layout_below="@id/inpNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpPIC"
                android:hint="Masukkan Person In Charge"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:textSize="14dp"/>

            <EditText
                android:layout_marginTop="20dp"
                android:layout_below="@id/inpNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpNohp"
                android:inputType="number"
                android:hint="Masukkan Nomor Handphone"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:textSize="14dp"/>

            <EditText
                android:layout_marginTop="20dp"
                android:layout_below="@id/inpNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpNowa"
                android:inputType="number"
                android:hint="Masukkan Nomor Whatsapp"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:textSize="14dp"/>

            <EditText
                android:layout_marginTop="20dp"
                android:layout_below="@id/inpNohp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/inpEmail"
                android:hint="Masukkan Email (optional)"
                android:background="@drawable/edittext_border"
                android:padding="15dp"
                android:textSize="14dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textAllCaps="false"
                android:background="@color/colorPrimaryDark"
                android:layout_below="@id/inpPin"
                android:id="@+id/btnregis"
                android:layout_marginTop="45dp"
                android:textColor="@android:color/white"
                android:textSize="18dp"></Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>